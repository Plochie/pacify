{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "declaration": true, // Generates corresponding ‘.d.ts’ file.
    "outDir": "./dist"
  },
  "types": [
    "node"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}